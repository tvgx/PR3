{
  "name": "backend-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the e-commerce backend microservices.",
  "scripts": {
    "dev:gateway": "npm run dev --workspace=api-gateway",
    "dev:auth": "npm run dev --workspace=auth-service",
    "dev:product": "npm run dev --workspace=product-service",
    "dev:order": "npm run dev --workspace=order-service",
    "dev": "npm-run-all --parallel dev:*"
  },
  "workspaces": [
    "api-gateway",
    "auth-service",
    "product-service",
    "order-service"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}